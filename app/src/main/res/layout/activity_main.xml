<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4">

    <TextView
        android:id="@+id/app_title_tictactoe"
        android:layout_width="324dp"
        android:layout_height="54dp"
        android:fontFamily="sans-serif-black"
        android:text="Tic Tac Toe"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_title_tictactoe"
        app:layout_constraintVertical_bias="0.166"
        app:rowCount="3">

        <Button
            android:id="@+id/button_0_0"
            style="@style/button_style"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/button_0_1"
            style="@style/button_style"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button_0_2"
            style="@style/button_style"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/button_1_0"
            style="@style/button_style"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_1_1"
            style="@style/button_style"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_1_2"
            style="@style/button_style"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_2_0"
            style="@style/button_style"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button_2_1"
            style="@style/button_style"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button_2_2"
            style="@style/button_style"
            app:layout_column="2"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/play_again_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:backgroundTint="#0373F4"
        android:text="Play Again!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/players_turn_text" />

    <TextView
        android:id="@+id/winner_text"
        android:layout_width="175dp"
        android:layout_height="85dp"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/play_again_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_layout" />

    <TextView
        android:id="@+id/players_turn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>